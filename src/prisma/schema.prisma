// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Game {
  id            String @id
  abbreviation  String @unique

  names       GameNames?
  platforms   GamePlatform[]
  links       GameLink[]
  categories  Category[]
}

model GameNames {
  id            Int    @id @default(autoincrement())
  international String
  twitch        String

  gameId  String
  game    Game  @relation(fields: [gameId], references: [id])
}

model GamePlatform {
  id          Int    @id @default(autoincrement())
  platformId  String

  gameId  String
  game    Game @relation(fields: [gameId], references: [id])
}

model GameLink {
  id  Int    @id @default(autoincrement())
  rel String
  uri String

  gameId  String
  game    Game @relation(fields: [gameId], references: [id])
}

model Category {
  id    String @id
  name  String
  links CategoryLink[]

  gameId  String
  game    Game @relation(fields: [gameId], references: [id])
}

model CategoryLink {
  id  Int    @id @default(autoincrement())
  rel String
  uri String

  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
}

model Runner {
  id    String @id
  name  String @unique
}

model User {
  id        Int          @id @default(autoincrement())
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  name      String       @unique

  commands    Command[]
  timestamps  Timestamp[]
  components  Component[]
  trusts      Trust[]
}

model Command {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  content   String
  madeBy    String

  user    User @relation(fields: [userId], references: [id])
  userId  Int
}

model Timestamp {   
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String
  url       String
  madeBy    String
  timestamp Int
  vodId     Int

  user   User @relation(fields: [userId], references: [id])
  userId Int
}

model Component {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  user    User @relation(fields: [userId], references: [id])
  userId  Int
}

model Trust {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String
  madeBy    String

  user    User @relation(fields: [userId], references: [id])
  userId  Int
}
