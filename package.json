{
  "name": "tmichatbot",
  "version": "1.0.0",
  "description": "Twitch chat bot developed in TypeScript",
  "main": "index.js",
  "scripts": {
    "dev:build": "tsc -w",
    "dev:run": "nodemon build/index.js",
    "dbreset": "npx prisma migrate reset -f && npx prisma migrate dev --name init && npx ts-node src/private/freshdb.ts",
    "dev": "concurrently npm:dev:*",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gitHabbe/TmiChatBot.git"
  },
  "keywords": [
    "typescript",
    "ts",
    "node",
    "nodejs",
    "twitch",
    "chat",
    "bot",
    "tmi",
    "tmijs"
  ],
  "jest": {
    "rootDir": "./test/",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "author": "gitHabbe",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gitHabbe/TmiChatBot/issues"
  },
  "homepage": "https://github.com/gitHabbe/TmiChatBot#readme",
  "dependencies": {
    "@prisma/client": "^4.1.0",
    "axios": "^0.21.1",
    "cheerio": "^1.0.0-rc.12",
    "fuse.js": "^6.4.6",
    "tmi.js": "^1.8.3"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/node": "^15.12.2",
    "@types/tmi.js": "^1.7.1",
    "concurrently": "^6.2.0",
    "dotenv": "^10.0.0",
    "jest": "^28.1.3",
    "nodemon": "^2.0.7",
    "prisma": "^4.1.0",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.3.2"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  }
}
